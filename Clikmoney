    <script>
        // Game State
        let cash = localStorage.getItem('playerCash') ? parseFloat(localStorage.getItem('playerCash')) : 0;
        let passiveIncome = localStorage.getItem('passiveIncome') ? parseFloat(localStorage.getItem('passiveIncome')) : 0;
        let perClick = localStorage.getItem('perClick') ? parseFloat(localStorage.getItem('perClick')) : 1;
        let ownedUpgrades = localStorage.getItem('ownedUpgrades') ? JSON.parse(localStorage.getItem('ownedUpgrades')) : {};
        let premiumActive = false;
        let adBonusActive = false;
        let adBonusEndTime = 0;

        // DOM Elements
        const cashDisplay = document.getElementById('cashDisplay');
        const perClickDisplay = document.getElementById('perClick');
        const passiveIncomeDisplay = document.getElementById('passiveIncome');
        const clickBtn = document.getElementById('clickBtn');
        const upgradeItems = document.querySelectorAll('.upgrade-item');
        const buyPremiumBtn = document.getElementById('buyPremiumBtn');
        const premiumBtn = document.getElementById('premiumBtn');
        const videoAdBtn = document.getElementById('videoAdBtn');
        const bannerAd = document.getElementById('bannerAd');
        const closeAdBtn = document.getElementById('closeAdBtn');

        // Format currency
        function formatCurrency(amount) {
            return amount.toLocaleString('pt-BR', {style: 'currency', currency: 'BRL'});
        }

        // Track global clicks (this would require a real backend API)
        function trackClick() {
            // In a real implementation, this would send data to your server
            console.log("Click tracked for monetization");
        }

        // Update UI and persist state
        function updateUI() {
            // Save to local storage
            localStorage.setItem('playerCash', cash);
            localStorage.setItem('passiveIncome', passiveIncome);
            localStorage.setItem('perClick', perClick);
            localStorage.setItem('ownedUpgrades', JSON.stringify(ownedUpgrades));
            cashDisplay.textContent = formatCurrency(cash);
            perClickDisplay.textContent = formatCurrency(perClick * (adBonusActive ? 3 : 1) * (premiumActive ? 2 : 1));
            passiveIncomeDisplay.textContent = formatCurrency(passiveIncome * (premiumActive ? 2 : 1));
            
            // Update upgrade buttons state
            upgradeItems.forEach(item => {
                const cost = parseFloat(item.dataset.cost);
                const btn = item.querySelector('.buy-btn');
                
                if (cash >= cost) {
                    btn.classList.remove('bg-gray-400', 'cursor-not-allowed');
                    btn.classList.add('bg-blue-500', 'hover:bg-blue-600');
                } else {
                    btn.classList.remove('bg-blue-500', 'hover:bg-blue-600');
                    btn.classList.add('bg-gray-400', 'cursor-not-allowed');
                }
            });

            // Show premium button if purchased
            if (premiumActive) {
                premiumBtn.classList.remove('hidden');
                buyPremiumBtn.textContent = 'Premium Ativo';
                buyPremiumBtn.classList.remove('from-purple-500', 'to-pink-500', 'hover:from-purple-600', 'hover:to-pink-600');
                buyPremiumBtn.classList.add('bg-green-500', 'hover:bg-green-600');
                buyPremiumBtn.disabled = true;
            }
        }

        // Handle click
        clickBtn.addEventListener('click', () => {
            trackClick(); // Track the click for monetization
            const bonusMultiplier = adBonusActive ? 3 : 1;
            const premiumMultiplier = premiumActive ? 2 : 1;
            const earnings = perClick * bonusMultiplier * premiumMultiplier;
            
            cash += earnings;
            
            // Add animation
            clickBtn.classList.add('coin-pulse');
            setTimeout(() => {
                clickBtn.classList.remove('coin-pulse');
            }, 500);
            
            // Create floating text
            const floatingText = document.createElement('div');
            floatingText.className = 'absolute text-yellow-500 font-bold animate-bounce';
            floatingText.textContent = `+${formatCurrency(earnings)}`;
            
            const rect = clickBtn.getBoundingClientRect();
            floatingText.style.left = `${rect.left + rect.width/2 - 30}px`;
            floatingText.style.top = `${rect.top - 20}px`;
            
            document.body.appendChild(floatingText);
            
            setTimeout(() => {
                floatingText.remove();
            }, 1000);
            
            updateUI();
        });

        // Handle upgrades
        upgradeItems.forEach(item => {
            const btn = item.querySelector('.buy-btn');
            
            btn.addEventListener('click', () => {
                const id = item.dataset.id;
                const cost = parseFloat(item.dataset.cost);
                const income = parseFloat(item.dataset.income || 0);
                const isClickUpgrade = item.dataset.type === 'click';
                
                if (cash >= cost) {
                    cash -= cost;
                    
                    if (isClickUpgrade) {
                        perClick += income;
                    } else {
                        // Business upgrade
                        if (!ownedUpgrades[id]) {
                            ownedUpgrades[id] = 0;
                        }
                        ownedUpgrades[id]++;
                        passiveIncome += income;
                        
                        // Update count display
                        const countElement = item.querySelector('.count');
                        countElement.textContent = ownedUpgrades[id];
                        
                        // Increase cost for next purchase
                        const newCost = Math.round(cost * 1.15);
                        item.dataset.cost = newCost;
                        item.querySelector('.cost').textContent = newCost.toLocaleString('pt-BR', {minimumFractionDigits: 2});
                    }
                    
                    updateUI();
                }
            });
        });

        // Handle premium purchase
        buyPremiumBtn.addEventListener('click', () => {
            if (cash >= 9.99 && !premiumActive) {
                cash -= 9.99;
                premiumActive = true;
                
                // Hide banner ad for premium users
                bannerAd.classList.add('hidden');
                
                // Show success message
                alert('Conta Premium ativada! Seus ganhos foram dobrados.');
                
                updateUI();
            } else if (premiumActive) {
                alert('Você já é um usuário Premium!');
            } else {
                alert('Você não tem dinheiro suficiente para comprar o Premium.');
            }
        });

        // Handle video ad bonus
        videoAdBtn.addEventListener('click', () => {
            if (!adBonusActive) {
                // Simulate ad watching
                videoAdBtn.innerHTML = `
                    <div class="flex items-center justify-center">
                        <i class="fas fa-spinner fa-spin text-2xl mr-2 text-blue-500"></i>
                        <span>Carregando anúncio...</span>
                    </div>
                `;
                
                setTimeout(() => {
                    // After "watching" the ad
                    adBonusActive = true;
                    adBonusEndTime = Date.now() + 30000; // 30 seconds
                    
                    videoAdBtn.innerHTML = `
                        <div class="flex items-center justify-c
